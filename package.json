{
    "name": "steam-design-tools",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "axios": "^0.21.1",
        "lodash": "^4.17.21",
        "node-sass": "^7.0.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-drag-listview": "^0.1.6",
        "react-router-dom": "^5.0.1",
        "react-scripts": "3.0.1"
    },
    "scripts": {
        "zip": "node ./config-zip.js",
        "lint": "eslint --ext .js src/ --max-warnings 10",
        "start": "react-app-rewired start",
        "build": "yarn lint && react-app-rewired build",
        "postbuild": "yarn zip",
        "test": "react-scripts test",
        "eject": "react-app-rewired eject"
    },
    "eslintConfig": {
        "extends": "react-app",
        "globals": {
            "chrome": true
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "archiver": "^5.0.0",
        "copy-webpack-plugin": "^5.0.4",
        "react-app-rewired": "^2.1.3"
    }
}
